@model List<Shipment>;


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Shipments</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Shipment" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Shipment
            </a>
        </div>
     </div>
        <br/><br/>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Origin</th>
            <th>Destination</th>
            <th>Status</th>
            <th>ShipmentDate</th>
            <th>PlannedDate</th>
            <th>EffectiveDate</th>
            <th>Comments</th>
            <th>CreatedBy</th>
            <th>DriverId</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="25%">@item.Origin</td>
                <td width="25%">@item.Destination</td>
                <td width="5%">@item.Status</td>
                <td width="25%">@item.ShipmentDate</td>
                <td width="25%">@item.PlannedDate</td>
                <td width="25%">@item.EffectiveDate</td>
                <td width="25%">@item.Comments</td>
                <td width="25%">@item.CreatedBy</td>
                <td width="30%">@item.DriverId</td>
                <td width="25%" >
                    <a asp-controller="Shipment" asp-action="Edit" asp-route-id="@item.Id.ToString()"><i class="bi bi-pencil-square"></i></a>
                </td>
                <td width="25%">
                    <a asp-controller="Shipment" asp-action="Delete" asp-route-id="@item.Id.ToString()"><i class="bi bi-trash3"></i></a>
                </td>
            </tr>
        }
    </tbody>


</table>

</div>
