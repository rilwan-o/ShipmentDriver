@model ShipmentDriver.Web.Models.Driver

@{
    var statusList = ViewBag.status;
}
<form method="post" asp-controller="Driver" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Update Driver</h2>
            <hr/>
        </div>
    <div class="mb-3">
        <input asp-for="Id" hidden class="form-control" />

        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
     <div class="mb-3">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" />
         <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
     <div class="mb-3">
        <label asp-for="VehiclePlate"></label>
        <input asp-for="VehiclePlate" class="form-control" />
        <span asp-validation-for="VehiclePlate" class="text-danger"></span>
    </div>
     <div class="mb-3">
        <label asp-for="ExpirationDate"></label>
        <input asp-for="ExpirationDate" class="form-control" />
        <span asp-validation-for="ExpirationDate" class="text-danger"></span>
    </div>
     <div class="mb-3">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Active">Status</label>
         <select id="active" class="form-control" data-toggle="tooltip" name="Active"
         data-trigger="hover" data-placement="top" data-title="DriverId">
         @foreach (var s in statusList)
         {
             <option value="@s.Id">@s.Name</option>
         }
         </select>
     </div>
    
    <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
    <a asp-controller="Driver" asp-action="Index" class="btn btn-secondary" style="width:150px">
        Back to List
    </a>
    </div>
</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />

    }
}